{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#imports": ["./node_modules/nuxt/dist/app"]
    }
  },
  "include": [
    "app/composables/**/*.ts",
    "app/utils/**/*.ts",
    "app/plugins/**/*.ts",
    "docs-temp/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt",
    ".output",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

